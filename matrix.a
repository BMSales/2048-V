.data
vector_1: .word 1, 2
vector_2: .word 3, 4
matrix: vector_1, vector_2

.macro ACCESS (%matrix, %li, %col)
	addi t1, t1, %li
	addi t2, t2, %col
	li t3, 4
	
	mul t1, t1, t3
	mul t2, t2, t3
	
	la s0, %matrix
	add s0, s0, t1
	lw t0, 0(s0)
	add t0, t0, t2
	lw a0, 0(t0)
	li a7, 1
	ecall
.end_macro

.text
main:
	ACCESS(matrix, 1, 1)
end:
	li a7, 10
	ecall
